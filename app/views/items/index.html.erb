<h1>餐點列表</h1>

<%= link_to "新增", new_item_path %>

<ul class="row">
  <% @items.each do |item|%>
  <div class="col-4 mt-2 card">
    <%= image_tag item.cover.variant(resize_to_limit: [200, 200]),
    class:'card-img-top' if item.cover.attached? %>
    <div class="card-body">
      <h5>
        <%= link_to item.name, item %>
      </h5>
      <%= link_to "編輯",edit_item_path(item), class: 'btn btn-primary'%>
      <%=link_to "刪除", item, data: {confirm:'確定刪除?', method:
      'delete'},class: 'btn btn-success' %>
    </div>
  </div>
  <% end %>
</ul>

